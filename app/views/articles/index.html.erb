<h1>articles</h1>

<ul class="list">
<% @articles.each do |article| %>
  <li>
    <%= link_to article.title, article_path(article) %>
    <small>
        <%= link_to article_path(article), method: :delete, data: { confirm: 'Are you sure you want to delete this restaurant?' } do%>
            <i class="fa fa-trash" style="width: 50px; height: 50px; color: black; display: show"></i>
        <% end %>
    </small>
  </li>
<%end%>
</ul>

<p><%= link_to 'New', new_article_path %></p>
